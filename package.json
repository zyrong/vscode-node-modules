{
  "name": "node-modules",
  "displayName": "node_modules",
  "description": "search node_modules package | click package.json package name jumps to the corresponding node_ modules",
  "publisher": "zyrong",
  "keywords": [
    "search",
    "node_modules",
    "package",
    "goto",
    "jump"
  ],
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.63.0"
  },
  "icon": "images/logo.png",
  "galleryBanner": {
    "color": "#2f54eb"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json",
    "onCommand:extension.search.package"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.search.package",
        "title": "%cmd.SearchPackage%"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceFilename == node_modules",
          "command": "extension.search.package",
          "group": "4_search"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.search.package",
        "mac": "cmd+k p",
        "key": "ctrl+k p"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "release-version": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "husky": "4",
    "mocha": "^9.1.3",
    "standard-version": "^9.3.2",
    "typescript": "^4.4.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -x @commitlint/config-conventional -e"
    }
  },
  "bugs": {
    "url": "https://github.com/zyrong/vscode-node-modules/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zyrong/vscode-node-modules"
  },
  "homepage": "https://github.com/zyrong/vscode-node-modules/blob/master/README.md"
}
